[server]
# username for running the daemon
username = 
# hostname. set it to a FQDN in order to be reached from outside
host = localhost
# ports
electrum_rpc_port = 8040
stratum_tcp_port = 5040
#stratum_tcp_ssl_port = 5042
#report_host = 
#report_stratum_tcp_port = 5043
#report_stratum_tcp_ssl_port = 5044
banner = Welcome to Electrum-KOBO!
banner_file = /etc/electrum-kobo.banner
#irc = no
#irc_nick = <yournickname>
#ssl_certfile = /path/to/server.crt
#ssl_keyfile = /path/to/server.key
logfile = /var/log/electrum-kobo.log
donation_address = 

[leveldb]
# path to your database
path = 
# for each address, history will be pruned if it is longer than this limit
pruning_limit = 1000

[bitcoind]
bitcoind_host = 127.0.0.1
bitcoind_port = 9011
# user and password from Kobocoin.conf
bitcoind_user = 
bitcoind_password = 
